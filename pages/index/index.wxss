.msg{
    width: 400rpx;
    height: 60rpx;
    border: 1px solid #000;
    display: inline-block;
}
.submit{
    display: inline-block;
    width: 160rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 30rpx;
}
.alert-bg{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.6);
    display: none;
    z-index: 1000;
}
.alert-bg.active{
    display: block;
}
.alert-edit{
    background-color: #fff;
    box-sizing: border-box;
    padding-top: 200rpx;
    position: absolute;
    width: 500rpx;
    height: 500rpx;
    top: 50%;
    left: 50%;
    margin-top: -250rpx;
    margin-left: -250rpx;
}

.alert-edit input{
    width: 80%;
    margin: 0 auto;
    border: 1px solid #000;
    color: #000;
    background-color: #fff;
}
.alert-edit button{
    display: block;
    margin: 0 auto;
    margin-top: 60rpx;
}